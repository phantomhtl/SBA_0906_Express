<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Portal</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Admin Portal</h1>

  <h2>Users</h2>
  <ul>
    <% users.forEach(user => { %>
      <li><%= user.username %> (<%= user.email %>)</li>
    <% }) %>
  </ul>

  <h2>Posts</h2>
  <ul>
    <% posts.forEach(post => { %>
      <li>"<%= post.title %>" Posted by User <%= post.authorId %></li>
    <% }) %>
  </ul>

  <h2>Comments</h2>
  <ul>
    <% comments.forEach(comment => { %>
      <li><%= comment.content %> on Post <%= comment.postId %> by User <%= comment.authorId %></li>
    <% }) %>
  </ul>
</body>
</html>
